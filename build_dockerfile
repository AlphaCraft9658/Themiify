FROM devkitpro/devkitppc:latest

RUN ["apt", "update"]
RUN ["apt", "upgrade", "-y"]
RUN ["apt", "install", "ranger", "clang", "nano", "-y"]
RUN ["dkp-pacman", "-Syu", "--noconfirm"]
RUN ["dkp-pacman", "-S", "ppc-libzip", "--noconfirm"]
COPY libmocha /tmp/libmocha
RUN ["make", "install", "-C", "/tmp/libmocha"]